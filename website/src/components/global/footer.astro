---
// Pre-render this component to static HTML/CSS (no client JS needed)
export const prerender = true;
---

<footer class="site-footer" aria-label="Footer">
  <div class="footer-inner">
    <h3 class="footer-title">Data n’Structor</h3>
    <nav class="footer-links">
      <a href="/">Home</a>
      <a href="/leaderboard">Leaderboard</a>
      <a href="/docs">Documentation</a>
    </nav>

    <p class="footer-bottom">© 2025 Data n’Structor.</p>
  </div>
</footer>

<style>
  footer {
    background: linear-gradient(180deg, rgba(108,140,255,0.12), rgba(103,232,249,0.06));
    box-shadow: inset 0 1px 0 rgba(108,140,255,0.22), 0 -4px 22px rgba(108,140,255,0.08);
    backdrop-filter: blur(10px);
    color: var(--text);
    text-align: center;
    padding: 2.5rem 0;
  }

  .footer-inner {
    width: min(1200px, 94vw);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.6rem;
  }

  .footer-title {
    font-size: 1.6rem;
    font-weight: 700;
    color: var(--text);
    letter-spacing: 0.04em;
    margin: 0;
  }

  /* Navigation links */
  .footer-links {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2.5rem;
    margin-top: 0.5rem;
  }

  .footer-links a {
    color: var(--primary);
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    transition: color 0.25s ease, text-shadow 0.25s ease;
  }

  /* Adds Subtle glow upon hovering. Diego: I personally don't like it but its on theme */
  .footer-links a:hover {
    color: var(--accent);
    text-shadow: 0 0 10px rgba(108,140,255,0.5), 0 0 18px rgba(108,140,255,0.35);
  }

  .footer-bottom {
    border-top: 1px solid rgba(108,140,255,0.18);
    padding-top: 1rem;
    font-size: 0.9rem;
    color: var(--primary);
    margin: 0;
  }

  @media (max-width: 700px) {
    .footer-links {
      flex-direction: column;
      gap: 0.75rem;
    }

    .footer-title {
      font-size: 1.3rem;
    }
  }
</style>
